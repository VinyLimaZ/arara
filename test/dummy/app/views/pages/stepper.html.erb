/* Alternative Label */
.MuiStepper-alternativeLabel {
    align-items: flex-start;
}

.MuiStep-alternativeLabel {
    flex: 1;
    position: relative;
}

.MuiStepLabel-root.MuiStepLabel-alternativeLabel {
    flex-direction: column;
}

.MuiStepLabel-iconContainer.MuiStepLabel-alternativeLabel {
    padding-right: 0;
}

.MuiStepLabel-label.MuiStepLabel-alternativeLabel {
    margin-top: 16px;
    text-align: center;
}
.MuiStepConnector-alternativeLabel {
    top: 12px;
    left: calc(-50% + 20px);
    right: calc(50% + 20px);
    position: absolute;
}

/* Vertical */
.MuiStepper-vertical {
    flex-direction: column;
}
.MuiStepConnector-vertical {
    padding: 0 0 8px;
    margin-left: 12px;
}
.MuiStepConnector-lineVertical {
    min-height: 24px;
    border-left-style: solid;
    border-left-width: 1px;
}

.MuiStepContent-root {
    margin-top: 8px;
    border-left: 1px solid #bdbdbd;
    margin-left: 12px;
    padding-left: 20px;
    padding-right: 8px;
}
</style>

<%= render(Arara::StepperComponent) do %>
  <%= render(Arara::StepComponent, title: "Select campaign settings", completed: true) %>
  <%= render(Arara::StepConnectorComponent, active: true) %>
  <%= render(Arara::StepComponent, title: "Create an ad group", sub_title: "Optional", active: true, order: 2) %>
  <%= render(Arara::StepConnectorComponent, active: false) %>
  <%= render(Arara::StepComponent, title: "Create an ad", order: 3) %>
<% end %>

<%= render(Arara::StepperComponent, alternative_label: true) do %>
  <%= render(Arara::StepComponent, title: "Select master blaster campaign settings", completed: true, alternative_label: true) %>
  <%= render(Arara::StepComponent, title: "Create an ad group", alternative_label: true, active: true, order: 2, connector: true) %>
  <%= render(Arara::StepComponent, title: "Create an ad", alternative_label: true, active: false, order: 3, connector: true) %>
<% end %>

<%= render(Arara::StepperComponent, orientation: "vertical") do %>
  <%= render(Arara::StepComponent, orientation: "vertical", title: "Select campaign settings", active: true, order: 1) do %>
    <p class="MuiTypography-root MuiTypography-body1">Forrrrrrrrrr each ad campaign that you create, you can control how much
      you're willing to spend on clicks and conversions, which networks
      and geographical locations you want your ads to show on, and more.
    </p>
  <% end %>
  <%= render(Arara::StepConnectorComponent, orientation: "vertical") %>
  <%= render(Arara::StepComponent, orientation: "vertical", title: "Create an ad group", order: 2) %>
  <%= render(Arara::StepConnectorComponent, orientation: "vertical") %>
  <%= render(Arara::StepComponent, orientation: "vertical", title: "Create an ad", order: 3) %>
<% end %>

<%= render(Arara::StepperComponent, orientation: "vertical") do %>
  <%= render(Arara::StepComponent, orientation: "vertical", title: "Select campaign settings", completed: true) %>
  <%= render(Arara::StepConnectorComponent, orientation: "vertical", active: true) %>
  <%= render(Arara::StepComponent, orientation: "vertical", title: "Create an ad group", order: 2, active: true) do %>
    <p class="MuiTypography-root MuiTypography-body1">Forrrrrrrrrr each ad campaign that you create, you can control how much
      you're willing to spend on clicks and conversions, which networks
      and geographical locations you want your ads to show on, and more.
    </p>
  <% end %>
  <%= render(Arara::StepConnectorComponent, orientation: "vertical") %>
  <%= render(Arara::StepComponent, orientation: "vertical", title: "Create an ad", order: 3) %>
<% end %>
